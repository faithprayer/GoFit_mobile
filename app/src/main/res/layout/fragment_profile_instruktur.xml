    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/viewTanggalLahir" />-->

    <Button
        android:id="@+id/btnHistroiInstruktur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:backgroundTint="@color/main"
        android:text="Histori Instruktur"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnLogoutProfileInstruktur"
        app:layout_constraintTop_toBottomOf="@+id/viewWaktuTerlambatInstruktur" />

    <Button
        android:id="@+id/btnLogoutProfileInstruktur"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="@color/red"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHistroiInstruktur"
        app:layout_constraintTop_toBottomOf="@+id/viewWaktuTerlambatInstruktur" />

